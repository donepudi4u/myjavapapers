<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.myjavapapers.beans.EmployeeBean" table="emp">
		<id name="empno" type="int" column="empno"></id>
		<property name="name" type="string" column="ename"></property>
		<property name="sal" type="int" column="sal"></property>
		<property name="job" type="string" column="job"></property>
	</class>
</hibernate-mapping>