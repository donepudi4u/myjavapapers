<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.myjavapapers.beans.Customers" table="Customers">
		<id name="customerId" type="int" column="id" />
		<property name="customerName" column="name" type="string" />
		<property name="customerAge" column="age" type="int" />
		<property name="customerAddress" column="address" type="string" />
	</class>
</hibernate-mapping>